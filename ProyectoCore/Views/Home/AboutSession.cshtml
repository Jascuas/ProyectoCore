@{
    ViewData["Title"] = "AboutSession";
}

<h2>Session con Core</h2>

@section styles{
    <link href="~/css/jquery.countdown.css" rel="stylesheet" />
}

@section scripts {
    <script src="~/js/jquery.countdown.js"></script>
    <script>
        $(document).ready(function () {
            $("#tiempo").countdown({
                "seconds": 30,
                "warning-time": 5,
                "normal-class": "countdown-normal",
                "warning-class": "countdown-warning",
                "stop-class": "countdown-stop"
            });
        });
    </script>
}

<h2 style="color:blue">@ViewData["MENSAJE"]</h2>

<div id="tiempo"></div>
<ul class="list-inline">
    <li class="list-inline-item">
        <a asp-controller="Home" asp-action="MiSesion"
           asp-route-accion="guardar">Almacenar Session</a>
    </li>
    <li class="list-inline-item">
        <a asp-controller="Home" asp-action="MiSesion"
           asp-route-accion="mostrar">Mostrar Session</a>
    </li>
</ul>

<hr />
<h1 style="color:red">
    Nombre: @ViewData["NOMBRE"], Edad: @ViewData["EDAD"]
</h1>
