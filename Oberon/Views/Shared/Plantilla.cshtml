<!DOCTYPE html>

<html class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/x-icon" href="~/images/Oberon.png">

    <title>Oberon</title>
   
   

    <environment include="Development">
        <!-- Bootstrap -->
        <link href="~/css/bootstrap.css" rel="stylesheet" />
        <!-- Material Design Bootstrap -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.6.0/css/mdb.min.css" rel="stylesheet">
        <!-- Awesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        <!-- Css -->
        <link href="~/css/starter-template.css" rel="stylesheet" />
        <!-- Cookie -->
        <link href="~/css/cookiealert.css" rel="stylesheet" />
    </environment>
    <environment include="Production">
        <!-- Bootstrap -->
        <link href="~/css/bootstrap.css" rel="stylesheet" />
        <!-- Material Design Bootstrap -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.6.0/css/mdb.min.css" rel="stylesheet">
        <!-- Awesome -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        <!-- Css -->
        <link href="~/css/starter-template.css" rel="stylesheet" />
        <!-- Cookie -->
        <link href="~/css/cookiealert.css" rel="stylesheet" />
    </environment>
</head>
<body class="d-flex flex-column h-100">
    <header>
        <nav class="navbar fixed-top navbar-expand-lg navbar-light scrolling-navbar top-nav-collapse" style="background-color:rgba(255, 255, 255, 0.8)">
            <a class="navbar-brand waves-effect" href="@Url.Action("Index", "Home")">
                <img src="~/images/Logo.webp" height="60" alt="mdb logo">
            </a>
            <!-- Collapse -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="container">

                <!-- Brand -->
                <!-- Links -->
                <div class="collapse navbar-collapse  page-home" id="navbarSupportedContent">

                    <!-- Left -->
                    <ul class="navbar-nav mr-auto navigation " id="navegacion">
                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Home" class="nav-link hvr-underline-from-center @(@ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active1" : "")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Tienda" asp-controller="Home" class="nav-link hvr-underline-from-center @(@ViewContext.RouteData.Values["action"].ToString() == "Tienda" ? "active1" : "")">Tienda</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Sobre" asp-controller="Home" class="nav-link hvr-underline-from-center @(@ViewContext.RouteData.Values["action"].ToString() == "Sobre" ? "active1" : "")">Sobre nosotros</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Contacto" asp-controller="Home" class="nav-link hvr-underline-from-center @(@ViewContext.RouteData.Values["action"].ToString() == "Contacto" ? "active1" : "")">Contacto</a>
                        </li>

                    </ul>

                    <partial name="_MenuLogout" />
                </div>

            </div>
        </nav>

    </header>
    <partial name="_PartialCookieConsent" />
    <main class="flex-shrink-0">
        @RenderBody()
    </main>
    <!--Footer-->
    <!-- Footer -->
    <footer class="text-light footer mt-auto elegant-color">
        <div class="container">
            <div class="row pt-4 text-center text-lg-left ">
                <div class="col-md-3 col-lg-4 col-xl-3">
                    <h5>Síguenos en redes</h5>
                    <hr class="bg-white mb-2 mt-0 d-inline-block mx-auto w-25">
                    <div>
                        <a href="https://instagram.com/oberonclothingdeerbrand/" class="text-light"><i class="fab fa-instagram mr-2 fa-2x"></i></a>
                        <a href="https://www.facebook.com/Oberon-Clothing-2003896452970311/"><i class="fab fa-facebook mr-2 fa-2x"></i></a>
                        <a href="https://www.youtube.com/channel/UCB3CXpEj20UW7Fzf9AXpWmg/featured?view_as=subscriber" class="text-danger"><i class="fab fa-youtube mr-2 fa-2x"></i></a>
                    </div>
                    
                </div>
                <div class="col-md-5 col-lg-4 col-xl-2 mx-auto">
                    <h5>Información</h5>
                    <hr class="bg-white mb-2 mt-0 d-inline-block mx-auto w-25">
                    <ul class="list-unstyled">
                        <li><a href="https://www.oberonclothing.com/aviso-legal" class="text-light">Aviso legal</a></li>
                        <li><a href="" class="text-light">Politica de cookies</a></li>
                        <li><a href="https://www.oberonclothing.com/devoluciones" class="text-light">Devoluciones</a></li>
                    </ul>
                </div>
                <div class="col-md-4 col-lg-4 col-xl-3">
                    <h5>Contact</h5>
                    <p class="float-right">
                        <a href="#"><i class="fas fa-angle-up text-white fa-lg"></i></a>
                    </p>
                    <hr class="bg-white mb-2 mt-0 d-inline-block mx-auto w-25">
                    <ul class="list-unstyled">
                        <li><i class="fa fa-home mr-2"></i> Oberon Clothing</li>
                        <li><i class="fa fa-envelope mr-2"></i> hola@oberonclothing.com</li>
                        <li><i class="fa fa-phone mr-2"></i> + 33 12 14 15 16</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Copyright -->
        <div class="footer-copyright text-center py-2 elegant-color-dark small">
            © 2019 Copyright: Oberon Clothing Company - Madrid, Comunidad de Madrid, España
        </div>
        <!-- Copyright -->
    </footer>
    <!--/.Footer-->


